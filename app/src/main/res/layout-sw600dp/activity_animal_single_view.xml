<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F4C3">

    <ImageView android:id="@+id/AnimalSingleView"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/todogh" />
    <TextView
        android:id="@+id/AnimalTVSingleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ddh"
        android:textSize="60sp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/AnimalSingleView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/animalbtnPronountiation"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginRight="43dp"
        android:background="@drawable/pronountiationbtnshape"
        android:text="@string/gh"
        android:textSize="20sp"
        android:onClick="AnimalPronountiation"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:id="@+id/Animalbtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@null"
        android:onClick="AnimalSound"
        android:src="@mipmap/audioicon"
        android:layout_marginRight="99dp"
        android:layout_marginEnd="99dp"
        android:layout_alignTop="@+id/animalbtnPronountiation"
        android:layout_toLeftOf="@+id/animalbtnPronountiation"
        android:layout_toStartOf="@+id/animalbtnPronountiation"
        android:contentDescription="@string/tododh" />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/backbtn"
        android:background="@null"
        android:onClick="backtoAnimalGridV"
        android:id="@+id/button4"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_alignTop="@+id/Animalbtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/tododgh" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:layout_marginStart="64dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7036610474547852/5458427194"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="64dp"></com.google.android.gms.ads.AdView>

</RelativeLayout>
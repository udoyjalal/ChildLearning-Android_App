<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4C3">

    <ImageView
        android:id="@+id/AnimalSingleView"
        android:layout_width="460dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/todohgd" />
    <TextView
        android:id="@+id/AnimalTVSingleView"
        android:layout_width="520dp"
        android:layout_height="220dp"
        android:text="@string/ddfj"
        android:textSize="60sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp" />
    <ImageButton
        android:id="@+id/Animalbtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="AnimalSound"
        android:src="@mipmap/audioicon"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/animalbtnPronountiation"
        android:layout_toStartOf="@+id/animalbtnPronountiation"
        android:layout_marginRight="91dp"
        android:layout_marginEnd="91dp"
        android:contentDescription="@string/todosf" />
    <Button
        android:id="@+id/animalbtnPronountiation"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:text="@string/jhf"
        android:textSize="20sp"
        android:background="@drawable/pronountiationbtnshape"
        android:onClick="AnimalPronountiation"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp"
        android:layout_alignTop="@+id/Animalbtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/backbtn"
        android:background="@null"
        android:onClick="backtoAnimalGridV"
        android:id="@+id/imageButton22"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/todogf" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="19dp"
        android:layout_toEndOf="@+id/AnimalSingleView"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7036610474547852/5458427194"
        android:layout_toRightOf="@+id/AnimalSingleView"></com.google.android.gms.ads.AdView>

</RelativeLayout>